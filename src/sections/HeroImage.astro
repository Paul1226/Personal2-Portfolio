<section>
    <h2>Natalie Sihombing</h2>
    <main>
        <figure>
            <img
                src="./public/herowm.png"
                alt="Imagen principal de Natalie Sihombing"
            />
        </figure>
    </main>
</section>

<style>
    section {
        h2 {
            font-size: 3rem;
            font-weight: 700;
            line-height: 3.2rem;
            text-align: center;
            margin-bottom: 6rem;
            transition: margin-bottom 300ms ease-in-out;
        }

        main {
            figure {
                width: 100%;
                max-width: 360px;
                margin: 0 auto;
                position: relative;
                background-color: var(--bgcolor);
                height: 20rem;
                display: flex;
                justify-content: center;
                align-items: end;
                border-radius: 1rem 1rem 0 0;
                border: 1px solid var(--bgcolor);

                img {
                    width: 100%;
                    object-fit: cover;
                    scale: 1.1;
                    clip-path: inset(0 0 4% 0);
                }
            }
            figure::before {
                content: '';
                position: absolute;
                inset: 0;
                border: .8rem solid white;
                border-bottom: 0;
                border-radius: inherit;

            }
        }
    }

    @media (min-width: 768px){
        section{
            h2{
                margin-bottom: 7rem;
            }
        }
    }
    @media (min-width: 1024px){
        section{
            h2{
                margin-bottom: 9rem;
            }
        }
    }
</style>
